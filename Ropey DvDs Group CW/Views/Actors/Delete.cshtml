@model Ropey_DvDs_Group_CW.Models.ActorModel

@{
    ViewData["Title"] = "Delete";
}



<h3 class="text-center">Are you sure you want to delete this Actor?</h3>
<div class="col-md-4 mx-auto card mt-5 p-5">
    <h4>Delete Actor</h4>
    <hr />
    <dl class="row mx-auto">
        <dt class = "col-sm-4">
            First Name
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.ActorFirstName)
        </dd>
        <dt class = "col-sm-4">
            Surname
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.ActorSurname)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ActorNumber" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
    </form>
</div>

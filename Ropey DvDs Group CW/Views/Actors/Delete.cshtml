@model Ropey_DvDs_Group_CW.Models.ActorModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Delete Actor</h1>

<h3 class="text-center">Are you sure you want to delete this Actor?</h3>
<div>
    
    <hr />
    <dl class="row mx-auto">
        <dt class = "col-sm-2">
            First Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ActorFirstName)
        </dd>
        <dt class = "col-sm-2">
            Surname
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ActorSurname)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ActorNumber" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

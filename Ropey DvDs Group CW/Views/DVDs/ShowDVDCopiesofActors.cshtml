
@{
    ViewData["Title"] = "ShowDVDCopiesofActors";
}

<h1>ShowDVDCopiesofActors</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Actor/s
            </th>
            <th>
                Number of Copies on the Shelves
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            @if (@item.NumberOfCopies != 0)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@foreach(var value in item.Cast)
                        {
                            <p>@value</p>
                        }
                    </td>
                    <td>
                        @item.NumberOfCopies
                    </td>
                </tr>
            }
            
            
        }
    </tbody>
</table>

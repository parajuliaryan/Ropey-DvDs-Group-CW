@model Ropey_DvDs_Group_CW.Models.DVDCategoryModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this DVD Category?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Category Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryDescription)
        </dd>
        <dt class = "col-sm-2">
            Age Restricted
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AgeRestricted)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoryNumber" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

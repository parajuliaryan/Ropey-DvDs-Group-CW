@model IEnumerable<Ropey_DvDs_Group_CW.Models.DVDCategoryModel>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Category Description
            </th>
            <th>
                Age Restricted Check
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AgeRestricted)
            </td>
            <td>
                <a class="btn btn-primary-edit" asp-action="Edit" asp-route-id="@item.CategoryNumber">Edit</a> |
                <a class="btn btn-primary-details" asp-action="Details" asp-route-id="@item.CategoryNumber">Details</a> |
                <a class="btn btn-primary-delete" asp-action="Delete" asp-route-id="@item.CategoryNumber">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

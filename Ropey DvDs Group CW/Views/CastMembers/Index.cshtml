@model IEnumerable<Ropey_DvDs_Group_CW.Models.CastMemberModel>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Index</h1>

<p>
    <a class="btn btn-primary bt-3" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                DVD Title
            </th>
            <th>
               Actor Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DVDTitleModel.DVDTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActorModel.ActorFirstName) @Html.DisplayFor(modelItem => item.ActorModel.ActorSurname)
            </td>
            <td>
                <a class="btn btn-primary-edit" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-primary-details" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-primary-delete" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

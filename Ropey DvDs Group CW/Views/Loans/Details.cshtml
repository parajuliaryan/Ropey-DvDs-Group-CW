@model Ropey_DvDs_Group_CW.Models.LoanModel

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Loan Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Loan Type
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LoanTypeModel.LoanType)
        </dd>
        <dt class = "col-sm-2">
            DVD Copy
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DVDCopyModel.CopyNumber)
        </dd>
        <dt class = "col-sm-2">
            Member
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MemberModel.MemberFirstName)
        </dd>
        <dt class = "col-sm-2">
            Date Out
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOut)
        </dd>
        <dt class = "col-sm-2">

@model Ropey_DvDs_Group_CW.Models.LoanModel

@{
    ViewData["Title"] = "Details";
}

<div class="col-md-4 mx-auto card mt-5 p-5">
    <h4>Loan Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-7">
           Loan Type
        </dt>
        <dd class = "col-sm-5">
            @Html.DisplayFor(model => model.LoanTypeModel.LoanType)
        </dd>
        <dt class = "col-sm-7">
            DVD Copy
        </dt>
        <dd class = "col-sm-5">
            @Html.DisplayFor(model => model.DVDCopyModel.CopyNumber)
        </dd>

        <dt class = "col-sm-7">
            Member
        </dt>
        <dd class = "col-sm-5">
            @Html.DisplayFor(model => model.MemberModel.MemberFirstName) @Html.DisplayFor(model => model.MemberModel.MemberLastName)
        </dd>
        <dt class = "col-sm-7">
            Date Out
        </dt>
        <dd class = "col-sm-5">
            @Html.DisplayFor(model => model.DateOut)
        </dd>
        <dt class = "col-sm-7">
            Date Due
        </dt>
        <dd class = "col-sm-5">
            @Html.DisplayFor(model => model.DateDue)
        </dd>
        <dt class = "col-sm-7">
           Returned Date
        </dt>
        <dd class = "col-sm-5">
            @Html.DisplayFor(model => model.DateReturned)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary-edit" asp-action="Edit" asp-route-id="@Model?.LoanNumber">Edit</a> 
   
</div>s

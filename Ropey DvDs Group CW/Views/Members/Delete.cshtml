@model Ropey_DvDs_Group_CW.Models.MemberModel

@{
    ViewData["Title"] = "Delete";
}


<h3 class="text-center">Are you sure you want to delete this Member?</h3>
<div class="col-md-4 mx-auto card mt-5 pt-4 p-5">
    <h4>Delete</h4>

    <hr />
    <dl class="row">
        <dt class = "col-sm-7">
            Member Number
        </dt>
        <dd class = "col-sm-5">
            @Html.DisplayFor(model => model.membershipCategoryModel.MembershipCategoryNumber)
        </dd>
        <dt class = "col-sm-7">
            Member First Name
        </dt>
        <dd class = "col-sm-5">
            @Html.DisplayFor(model => model.MemberFirstName)
        </dd>
        <dt class = "col-sm-7">
            Member Last Name
        </dt>
        <dd class = "col-sm-5">
            @Html.DisplayFor(model => model.MemberLastName)
        </dd>
        
        <dt class = "col-sm-7">
            Member Address
        </dt>
        <dd class = "col-sm-5">
            @Html.DisplayFor(model => model.MemberAddress)
        </dd>
        <dt class = "col-sm-7">
            Member DOB
        </dt>
        <dd class = "col-sm-5">
            @Html.DisplayFor(model => model.MemberDateOfBirth)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MemberNumber" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
       
    </form>
</div>

@model Ropey_DvDs_Group_CW.Models.MembershipCategoryModel

@{
    ViewData["Title"] = "Delete";
}


<h3 class="text-center">Are you sure you want to delete this Membership Category?</h3>
<div class="col-md-4 mx-auto card mt-5 p-5">
    
<h4>Delete Membership Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-7">
            Membership Category
        </dt>
        <dd class = "col-sm-5">
            @Html.DisplayFor(model => model.MembershipCategoryDescription)
        </dd>
        <dt class = "col-sm-7">
           Total Loans that could be Taken
        </dt>
        <dd class = "col-sm-5">
            @Html.DisplayFor(model => model.MembershipCategoryTotalLoan)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MembershipCategoryNumber" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        
    </form>
</div>
<a asp-action="Index">Back to List</a>
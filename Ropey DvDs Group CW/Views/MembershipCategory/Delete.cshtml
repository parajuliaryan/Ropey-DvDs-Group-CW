@model Ropey_DvDs_Group_CW.Models.MembershipCategoryModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Membership Category</h1>

<h3>Are you sure you want to delete this Membership Category?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Membership Category
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MembershipCategoryDescription)
        </dd>
        <dt class = "col-sm-2">
           Total Loans that could be Taken
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MembershipCategoryTotalLoan)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MembershipCategoryNumber" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

@model IEnumerable<Ropey_DvDs_Group_CW.Models.DVDCopyModel>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">DVD Copies Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<form  asp-action="OlderCopyDVD">
    <button class="btn btn-primary-details mt-2" type="submit">Older Copies</button>
</form>
<form asp-action="LoanedOutCopies">
    <button class="btn btn-primary-delete mt-2"type="submit">Loaned Out Copies</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
               DVD Copy Number
            </th>
            <th>
               DVD Title
            </th>
            <th>
                Date Purchased
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CopyNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DVDTitleModel.DVDTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatePurchased)
            </td>
            <td>
                <a class="btn btn-primary-edit" asp-action="Edit" asp-route-id="@item.CopyNumber">Edit</a> |
                <a class="btn btn-primary-details" asp-action="Details" asp-route-id="@item.CopyNumber">Details</a> |
                <a class="btn btn-primary-delete" asp-action="Delete" asp-route-id="@item.CopyNumber">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
